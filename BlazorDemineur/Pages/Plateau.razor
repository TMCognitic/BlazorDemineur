
<table>
    <tbody>
        @for (int y = 0; y < 10; y++)
        {
            <tr>
                @for (int x = 0; x < 10; x++)
                {
                    <td>
                        <Case X="x" Y="y" OnFirstClick="OnFirstClick" OnCreated="OnNewCaseCreated" CaseExplosion="OnCaseExplosion" />
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
